pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git config --global —add url.”https://username:password@github.com/“.insteadOf “https://github.com”
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t my-apache-app .'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh '''
                    docker stop my-apache-container || true
                    docker rm my-apache-container || true
                    docker run -d --name my-apache-container -p 8081:80 my-apache-app
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
